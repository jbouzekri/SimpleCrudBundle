{% extends app.request.xmlHttpRequest ? templates.layout_ajax : templates.layout %}

{% block content %}
    <table class="table">
        <tr>
            {% for col in columns %}
                <th>{{ col }}</th>
            {% endfor %}
            <th>actions</th>
        </tr>
        {% for entity in entities %}
            <tr>
                {% for col in columns %}
                    <td>{{ attribute(entity, col) }}</td>
                {% endfor %}
                <td></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}